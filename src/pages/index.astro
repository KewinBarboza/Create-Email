---
import Form from "../components/Form.astro";
import Layout from "../components/Layout.astro";
---

<Layout>
  <div
    class="bg-slate-50 dark:bg-slate-800 p-5 border-b-2 border-slate-900 px-36"
  >
    <h1
      class="my-9 text-center text-5xl font-medium text-gray-900 dark:text-white"
    >
      Create Email
    </h1>
    <Form />
  </div>
  <div class="px-36 mt-20">
    <div
      class="w-full mb-4 border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600"
    >
      <div
        class="flex items-center justify-between px-3 py-2 border-b dark:border-gray-600"
      >
        <p class="text-white text-lg">Resultado</p>
        <div>
          <button
            type="button"
            data-tooltip-target="tooltip-fullscreen"
            class="p-2 text-gray-500 rounded cursor-pointer sm:ml-auto hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-600"
          >
            <svg
              width="28px"
              height="28px"
              stroke-width="1.67"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              color="#1a88ff"
              ><g
                clip-path="url(#restart_svg__clip0_1735_6488)"
                stroke="#1a88ff"
                stroke-width="1.67"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path
                  d="M6.677 20.567C2.531 18.021.758 12.758 2.717 8.144 4.875 3.06 10.745.688 15.829 2.846c5.084 2.158 7.456 8.029 5.298 13.113a9.954 9.954 0 01-3.962 4.608"
                ></path><path d="M17 16v4.4a.6.6 0 00.6.6H22M12 22.01l.01-.011"
                ></path></g
              ><defs
                ><clipPath id="restart_svg__clip0_1735_6488"
                  ><path fill="#fff" d="M0 0h24v24H0z"></path></clipPath
                ></defs
              ></svg
            >
          </button>
          <button
            type="button"
            data-tooltip-target="tooltip-fullscreen"
            class="p-2 text-gray-500 rounded cursor-pointer sm:ml-auto hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-600"
          >
            <!--?xml version="1.0" encoding="UTF-8"?-->
            <svg
              width="28px"
              height="28px"
              stroke-width="1.67"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              color="#1a88ff"
              ><path
                d="M19.4 20H9.6a.6.6 0 01-.6-.6V9.6a.6.6 0 01.6-.6h9.8a.6.6 0 01.6.6v9.8a.6.6 0 01-.6.6z"
                stroke="#1a88ff"
                stroke-width="1.67"
                stroke-linecap="round"
                stroke-linejoin="round"></path><path
                d="M15 9V4.6a.6.6 0 00-.6-.6H4.6a.6.6 0 00-.6.6v9.8a.6.6 0 00.6.6H9"
                stroke="#1a88ff"
                stroke-width="1.67"
                stroke-linecap="round"
                stroke-linejoin="round"></path></svg
            >
          </button>
        </div>
      </div>
      <div class="px-4 py-2 bg-white rounded-b-lg dark:bg-gray-800">
        <textarea
          id="editor"
          rows="8"
          class="block w-full px-0 text-sm text-gray-800 bg-white border-0 dark:bg-gray-800 focus:ring-0 dark:text-white dark:placeholder-gray-400"
        ></textarea>
      </div>
    </div>
  </div>
</Layout>
