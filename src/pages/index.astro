---
import Hero from '@components/Hero.astro'
import Layout from '@components/Layout.astro'
---

<Layout>
	<Hero />

	<section
		class='mb-5 flex h-full w-full items-stretch rounded-lg bg-gradient-to-tl from-blue-500 p-[1px] shadow-md'
	>
		<div
			class='flex h-full w-full flex-col items-center justify-around rounded-lg bg-white p-5 hover:bg-slate-50/90 dark:bg-gray-900 hover:dark:bg-zinc-900/80'
		>
			<div>
				<svg
					width='175px'
					height='175px'
					stroke-width='0.3'
					viewBox='0 0 24 24'
					fill='none'
					xmlns='http://www.w3.org/2000/svg'
					color='#4c7df0'
					><path
						d='M20 6v12a2 2 0 01-2 2H6a2 2 0 01-2-2V6a2 2 0 012-2h12a2 2 0 012 2zM12 9V4'
						stroke='#4c7df0'
						stroke-width='0.3'
						stroke-linecap='round'
						stroke-linejoin='round'></path></svg
				>
			</div>
			<div class='flex w-3/4 flex-col items-center justify-center text-center'>
				<h2 class='text-4xl font-bold text-gray-700 dark:text-white'>Product description</h2>
				<p class='pr-3 text-gray-400'>
					Create a product description in just minutes. This app allows you to create a custom
					description that is viewable to customers and search engines.
				</p>
				<a
					href='/product-description'
					class='mt-5 block w-full rounded-lg bg-blue-600 py-2 px-4 text-sm font-semibold text-white md:w-3/6'
				>
					Create a product description
				</a>
			</div>
		</div>
	</section>
	<section
		class='mb-5 mt-20 flex h-full w-full items-stretch rounded-lg bg-gradient-to-tr from-orange-400 p-[1px] shadow-md'
	>
		<div
			class='flex h-full w-full flex-col items-center justify-around rounded-lg bg-white p-5 hover:bg-slate-50/90 dark:bg-gray-900 hover:dark:bg-zinc-900/80'
		>
			<div>
				<svg
					width='175px'
					height='175px'
					stroke-width='0.2'
					viewBox='0 0 24 24'
					fill='none'
					xmlns='http://www.w3.org/2000/svg'
					color='#f0964c'
					><path
						d='M7 9l5 3.5L17 9'
						stroke='#f0964c'
						stroke-width='0.2'
						stroke-linecap='round'
						stroke-linejoin='round'></path><path
						d='M2 17V7a2 2 0 012-2h16a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2z'
						stroke='#f0964c'
						stroke-width='0.2'></path></svg
				>
			</div>
			<div class='flex w-3/4 flex-col items-center justify-center text-center'>
				<h2 class='text-4xl font-bold text-gray-700 dark:text-white'>Create email</h2>
				<p class='pr-3 text-gray-400'>
					Create beautiful, personalized e-mails with our AI. Use the form below to create your
					first email
				</p>
				<a
					href='/create-email'
					class='mt-5 block w-full rounded-lg bg-orange-600 py-2 px-4 text-sm font-semibold text-white md:w-3/6'
					>Create email</a
				>
			</div>
		</div>
	</section>
</Layout>
